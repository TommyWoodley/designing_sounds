<RootWave>:
    clear: clear_button
    play: play_button
    sd: sd
    offset: offset


    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        pos: self.pos
        padding: 40

        BoxLayout:
            id: modulation
            size_hint: 1, 0.5

        BoxLayout:
            size_hint: 1, 0.5
            orientation: 'horizontal'

            BoxLayout:
                size_hint: 0.7, 1
                orientation: 'horizontal'

                BoxLayout:
                    id: power_spectrum
                    size_hint: 0.6, 1
                    padding: [0, 20, 20, 20]

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.4, 1
                    border: 1

                    BoxLayout:
                        size_hint: 1, 0.3
                        orientation: 'vertical'

                        Label:
                            text: str(sd.value) + ' SD '
                        Slider:
                            id: sd
                            value: 1
                            min: 0
                            max: 10
                            step: 0.1
                            on_value: root.update_power_spectrum(sd.value, offset.value)
                    BoxLayout:
                        size_hint: 1, 0.3
                        orientation: 'vertical'
                        Label:
                            text: str(offset.value) + ' Offset'
                        Slider:
                            id: offset
                            value: 250
                            min: 0
                            max: 500
                            step: 10
                            on_value: root.update_power_spectrum(sd.value, offset.value)
                    BoxLayout:
                        size_hint: 1, 0.4
                        orientation: 'vertical'


            BoxLayout:
                size_hint: 0.3, 1
                orientation: 'vertical'

                BoxLayout:
                    size_hint: 1, 0.5
                    padding: 20
                    Button:
                        id: play_button
                        text: 'Play/Pause'

                BoxLayout:
                    size_hint: 1, 0.5
                    padding: 20
                    Button:
                        id: clear_button
                        text: 'Clear'







