<RootWave>:
    clear: clear_button
    play: play_button
    freq: freq
    amp: amp

    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        pos: self.pos
        padding: 40

        BoxLayout:
            id: modulation
            size_hint: 1, 0.5
            orientation: 'vertical'

        BoxLayout:
            size_hint: 1, 0.5
            orientation: 'horizontal'


            BoxLayout:
                size_hint: 0.5, 1
                orientation: 'vertical'

                BoxLayout:
                    size_hint: 1, 0.5
                    padding: 20
                    Button:
                        id: play_button
                        text: 'Play/Pause'

                BoxLayout:
                    size_hint: 1, 0.5
                    padding: 20
                    Button:
                        id: clear_button
                        text: 'Clear'

            BoxLayout:
                size_hint: 0.5, 1
                orientation: 'vertical'

                BoxLayout:
                    size_hint: 1, 0.5
                    orientation: 'vertical'
                    padding: 40
                    Label:
                        text: 'Frequency ' + str(freq.value) + ' Hz'
                    Slider:
                        id: freq
                        value: 100
                        min: 10
                        max: 8000
                        step: 10
                        on_value: root.update_plot(freq.value, amp.value)
                BoxLayout:
                    size_hint: 1, 0.5
                    orientation: 'vertical'
                    padding: 40
                    Label:
                        text: 'Amplitude ' + str(amp.value) + ' %'
                    Slider:
                        id: amp
                        value: 100
                        min: 0
                        max: 100
                        step: 1
                        on_value: root.update_plot(freq.value, amp.value)






