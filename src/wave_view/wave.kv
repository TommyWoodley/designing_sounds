<RootWave>:
    #:import style src.wave_view.style
    clear: clear_button
    play: play_button
    eraser_mode: eraser_mode
    add: add_button
    all_power_spectrums: all_power_spectrum_button
    sd: sd
    mean: mean
    harmonic_samples: samples
    num_harmonics: num_harmonics
    decay_function: decay_function


    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        pos: self.pos
        padding: 20

        BoxLayout:
            size_hint: 1, None

            MDLabel:
                text: 'Waveform'
                halign: 'center'
                theme_text_color: 'Primary'
                font_style: 'H6'

        BoxLayout:
            orientation: 'horizontal'

            BoxLayout:
                id: modulation
                size_hint: 1, 1

            BoxLayout:
                size_hint: 0.3, 1
                orientation: 'vertical'

                BoxLayout:
                    size_hint: 1, 0.5
                    orientation: 'vertical'




                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, 1

                    BoxLayout:
                        size_hint: 1, 0.15

                    MDIconButton:
                        md_bg_color: style.blue_violet
                        id: play_button
                        icon: 'play'
                        theme_text_color: 'Custom'
                        text_color: style.white

                    BoxLayout:
                        size_hint: 1, 0.15

                    MDIconButton:
                        md_bg_color: style.blue_violet
                        id: eraser_mode
                        icon: 'eraser'
                        theme_text_color: 'Custom'
                        text_color: style.white

                    BoxLayout:
                        size_hint: 0.5, 0.2

                    MDRectangleFlatIconButton:
                        md_bg_color: style.blue_violet
                        id: clear_button
                        icon: 'selection-ellipse-remove'
                        text: 'Clear Points'
                        pos_hint: {'center_y':.2}
                        icon_color: 'white'
                        text_color: 'white'
                        line_color: (0, 0, 0, 0)

                    BoxLayout:
                        size_hint: 1, 0.1

                MDRoundFlatIconButton:
                    text: "Open manager"
                    icon: "folder"

                    pos_hint: {'center_x': .5, 'center_y': .6}
                    on_release: root.file_manager_open()

                BoxLayout:
                    size_hint: 1, 1
                    orientation: 'vertical'


        BoxLayout:
            size_hint: 1, 0.8
            orientation: 'horizontal'

            BoxLayout:
                size_hint: 0.7, 1
                orientation: 'horizontal'

                BoxLayout:
                    size_hint: 0.2, 1

                BoxLayout:
                    size_hint: 0.7, 1
                    orientation: 'vertical'

                    BoxLayout:
                        size_hint: 1, None

                        MDLabel:
                            text: 'Power Spectrum'
                            halign: 'center'
                            theme_text_color: 'Primary'
                            font_style: 'H6'

                    BoxLayout:
                        id: power_spectrum
                        size_hint: 1, 0.9
                        padding: [0, 20, 20, 20]

                    BoxLayout:
                        spacing: 10
                        id: power_spectrum_buttons
                        size_hint: 1, 0.1
                        orientation: 'horizontal'



                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.4, 1
                    border: 1

                    BoxLayout:
                        size_hint: 1, 0.5
                        orientation: 'vertical'

                    BoxLayout:
                        size_hint: 1, 1
                        orientation: 'vertical'

                        MDLabel:
                            text: 'Standard Deviation: ' + str(round(float(sd.value), 1))
                            halign: 'center'
                            theme_text_color: 'Primary'
                        MDSlider:
                            color: style.cyber_grape
                            hint: False
                            hint_bg_color: style.dark_sky_blue
                            hint_text_color: "white"
                            hint_radius: [6, 0, 6, 0]
                            thumb_color_active: style.dark_sky_blue
                            thumb_color_inactive: style.palatinate_purple
                            id: sd
                            value: 1
                            min: 0
                            max: 10
                            step: 0.1
                            on_value: root.update_wave()
                            show_off: False
                    BoxLayout:
                        size_hint: 1, 1
                        orientation: 'vertical'
                        MDLabel:
                            text: 'Frequency: ' + str(round(float(mean.value), 1)) + 'Hz'
                            halign: 'center'
                            theme_text_color: 'Primary'
                        MDSlider:
                            color: style.cyber_grape
                            hint: False
                            hint_bg_color: style.dark_sky_blue
                            hint_text_color: "white"
                            hint_radius: [6, 0, 6, 0]
                            thumb_color_active: style.dark_sky_blue
                            thumb_color_inactive: style.palatinate_purple
                            id: mean
                            value: 500
                            min: 0
                            max: 2000
                            step: 0.1
                            on_value: root.update_wave()
                            show_off: False
                    BoxLayout:
                        size_hint: 1, 1
                        orientation: 'vertical'
                        MDLabel:
                            text: 'Samples: ' + str(int(samples.value)) + '%'
                            halign: 'center'
                            theme_text_color: 'Primary'

                        MDSlider:
                            color: style.cyber_grape
                            hint: False
                            hint_bg_color: style.dark_sky_blue
                            hint_text_color: "white"
                            hint_radius: [6, 0, 6, 0]
                            thumb_color_active: style.dark_sky_blue
                            thumb_color_inactive: style.palatinate_purple
                            id: samples
                            value: 50
                            min: 1
                            max: 100
                            step: 1
                            on_value: root.update_wave()
                            show_off: False
                    BoxLayout:
                        size_hint: 1, 1
                        orientation: 'vertical'
                        MDLabel:
                            text: 'Num harmonics: ' + str(int(num_harmonics.value))
                            halign: 'center'
                            theme_text_color: 'Primary'

                        MDSlider:
                            color: style.cyber_grape
                            hint: False
                            hint_bg_color: style.dark_sky_blue
                            hint_text_color: "white"
                            hint_radius: [6, 0, 6, 0]
                            thumb_color_active: style.dark_sky_blue
                            thumb_color_inactive: style.palatinate_purple
                            id: num_harmonics
                            value: 1
                            min: 1
                            max: 5
                            step: 1
                            on_value: root.update_wave()
                            show_off: False
                    BoxLayout:
                        size_hint: 1, 0.3

                    BoxLayout:
                        orientation: 'horizontal'

                        BoxLayout:
                            size_hint: 0.03, 1

                        BoxLayout:
                            size_hint: 1, 1
                            orientation: 'vertical'
                            MDLabel:
                                text: 'Decay function: ' + decay_function.text
                                halign: 'center'
                                theme_text_color: 'Primary'

                            MDTextField:
                                color_mode: style.cyber_grape
                                fill_color: style.dark_sky_blue
                                line_color_focus: style.dark_sky_blue
                                line_color_normal: style.palatinate_purple
                                id: decay_function
                                text: '1 / x'
                                on_text_validate: root.update_wave()


                        BoxLayout:
                            size_hint: 0.03, 1

                    BoxLayout:
                        orientation: 'horizontal'

                        BoxLayout:
                            size_hint: 0.5, 0.2

                        MDRectangleFlatIconButton:
                            md_bg_color: style.blue_violet
                            id: add_button
                            icon: 'plus'
                            text: 'Add Power Spectrum'
                            icon_color: 'white'
                            text_color: 'white'
                            line_color: (0, 0, 0, 0)

                        BoxLayout:
                            size_hint: 0.5, 0.2

                        MDRectangleFlatIconButton:
                            md_bg_color: style.blue_violet
                            id: all_power_spectrum_button
                            icon: 'chart-bar'
                            text: 'Display All'
                            icon_color: 'white'
                            text_color: 'white'
                            line_color: (0, 0, 0, 0)

                        BoxLayout:
                            size_hint: 0.5, 0.2

                    BoxLayout:
                        size_hint: 1, 0.5
                        orientation: 'vertical'

                BoxLayout:
                    size_hint: 0.2, 1

        BoxLayout:
            size_hint: 1, 0.05






