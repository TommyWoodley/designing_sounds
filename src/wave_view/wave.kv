<RightContentCls>
    disabled: True
    pos_hint: {"center_y": .5}

    MDIconButton:
        icon: root.icon
        md_bg_color_disabled: 0, 0, 0, 0

    MDLabel:
        text: root.text
        pos_hint: {"center_y": .5}


<Item>

    IconLeftWidget:
        icon: root.left_icon

    RightContentCls:
        id: container
        icon: root.right_icon
        text: root.right_text

<RootWave>:
    clear: clear_button
    play: play_button
    add: add_button
    all_power_spectrums: all_power_spectrum_button
    sd: sd
    mean: mean
    harmonic_samples: samples
    zoom: zoom
    panning: panning_mode


    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        pos: self.pos
        padding: 20

        BoxLayout:
            size_hint: 1, None

            MDLabel:
                text: 'Waveform'
                halign: 'center'
                theme_text_color: 'Primary'
                font_style: 'H6'

        BoxLayout:
            orientation: 'horizontal'

            BoxLayout:
                id: modulation
                size_hint: 1, 1

            BoxLayout:
                size_hint: 0.3, 1
                orientation: 'vertical'

                BoxLayout:
                    size_hint: 1, 0.5
                    orientation: 'vertical'

                BoxLayout:
                    size_hint: 1, 1
                    orientation: 'vertical'
                    MDLabel:
                        text: 'Zoom: ' + str(zoom.value) + 'x'
                        halign: 'center'
                        theme_text_color: 'Primary'
                    MDSlider:
                        color: kivy.utils.get_color_from_hex("#59C9A5")
                        hint: True
                        hint_bg_color: kivy.utils.get_color_from_hex("#233D4D")
                        hint_text_color: "white"
                        hint_radius: [6, 0, 6, 0]
                        thumb_color_active: kivy.utils.get_color_from_hex("#EE7B30")
                        thumb_color_inactive: kivy.utils.get_color_from_hex("#59C9A5")
                        id: zoom
                        value: 1
                        min: 1
                        max: 10
                        step: 1
                        on_value: root.update_zoom(zoom.value)
                        show_off: False

                BoxLayout:
                    size_hint: 1, 1
                    orientation: 'horizontal'
                    MDRectangleFlatIconButton:
                        md_bg_color: kivy.utils.get_color_from_hex("#3FA7D6")
                        icon_color: 'white'
                        text_color: 'white'
                        icon: 'menu-down'
                        line_color: (0, 0, 0, 0)
                        id: panning_mode
                        text: "Choose mode"
                        on_release: root.open_centred()


                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, 1

                    BoxLayout:
                        size_hint: 1, 0.2

                    MDRectangleFlatIconButton:
                        md_bg_color: kivy.utils.get_color_from_hex("#3FA7D6")
                        id: play_button
                        icon: 'play-pause'
                        text: 'Play/ Pause'
                        icon_color: 'white'
                        text_color: 'white'
                        line_color: (0, 0, 0, 0)

                    BoxLayout:
                        size_hint: 0.5, 0.2

                    MDRectangleFlatIconButton:
                        md_bg_color: kivy.utils.get_color_from_hex("#3FA7D6")
                        id: clear_button
                        icon: 'selection-ellipse-remove'
                        text: 'Clear Points'
                        icon_color: 'white'
                        text_color: 'white'
                        line_color: (0, 0, 0, 0)

                    BoxLayout:
                        size_hint: 1, 0.2

                BoxLayout:
                    size_hint: 1, 1
                    orientation: 'vertical'


        BoxLayout:
            size_hint: 1, 0.8
            orientation: 'horizontal'

            BoxLayout:
                size_hint: 0.7, 1
                orientation: 'horizontal'

                BoxLayout:
                    size_hint: 0.2, 1

                BoxLayout:
                    size_hint: 0.7, 1
                    orientation: 'vertical'

                    BoxLayout:
                        size_hint: 1, None

                        MDLabel:
                            text: 'Power Spectrum'
                            halign: 'center'
                            theme_text_color: 'Primary'
                            font_style: 'H6'

                    BoxLayout:
                        id: power_spectrum
                        size_hint: 1, 0.9
                        padding: [0, 20, 20, 20]

                    BoxLayout:
                        spacing: 10
                        id: power_spectrum_buttons
                        size_hint: 1, 0.1
                        orientation: 'horizontal'



                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.4, 1
                    border: 1

                    BoxLayout:
                        size_hint: 1, 0.5
                        orientation: 'vertical'

                    BoxLayout:
                        size_hint: 1, 1
                        orientation: 'vertical'

                        MDLabel:
                            text: 'Standard Deviation: ' + str(round(float(sd.value), 1))
                            halign: 'center'
                            theme_text_color: 'Primary'
                        MDSlider:
                            color: kivy.utils.get_color_from_hex("#59C9A5")
                            hint: True
                            hint_bg_color: kivy.utils.get_color_from_hex("#233D4D")
                            hint_text_color: "white"
                            hint_radius: [6, 0, 6, 0]
                            thumb_color_active: kivy.utils.get_color_from_hex("#EE7B30")
                            thumb_color_inactive: kivy.utils.get_color_from_hex("#59C9A5")
                            id: sd
                            value: 1
                            min: 0
                            max: 10
                            step: 0.1
                            on_value: root.update_power_spectrum(mean.value, sd.value, samples.value)
                            show_off: False
                    BoxLayout:
                        size_hint: 1, 1
                        orientation: 'vertical'
                        MDLabel:
                            text: 'Frequency: ' + str(round(float(mean.value), 1)) + 'Hz'
                            halign: 'center'
                            theme_text_color: 'Primary'
                        MDSlider:
                            color: kivy.utils.get_color_from_hex("#59C9A5")
                            hint: True
                            hint_bg_color: kivy.utils.get_color_from_hex("#233D4D")
                            hint_text_color: "white"
                            hint_radius: [6, 0, 6, 0]
                            thumb_color_active: kivy.utils.get_color_from_hex("#EE7B30")
                            thumb_color_inactive: kivy.utils.get_color_from_hex("#59C9A5")
                            id: mean
                            value: 500
                            min: 0
                            max: 1000
                            step: 0.1
                            on_value: root.update_power_spectrum(mean.value, sd.value, samples.value)
                            show_off: False
                    BoxLayout:
                        size_hint: 1, 1
                        orientation: 'vertical'
                        MDLabel:
                            text: 'Samples: ' + str(int(samples.value)) + '%'
                            halign: 'center'
                            theme_text_color: 'Primary'

                        MDSlider:
                            color: kivy.utils.get_color_from_hex("#59C9A5")
                            hint: True
                            hint_bg_color: kivy.utils.get_color_from_hex("#233D4D")
                            hint_text_color: "white"
                            hint_radius: [6, 0, 6, 0]
                            thumb_color_active: kivy.utils.get_color_from_hex("#EE7B30")
                            thumb_color_inactive: kivy.utils.get_color_from_hex("#59C9A5")
                            id: samples
                            value: 50
                            min: 0
                            max: 100
                            step: 1
                            on_value: root.update_power_spectrum(mean.value, sd.value, samples.value)
                            show_off: False

                    BoxLayout:
                        orientation: 'horizontal'

                        BoxLayout:
                            size_hint: 0.5, 0.2

                        MDRectangleFlatIconButton:
                            md_bg_color: kivy.utils.get_color_from_hex("#3FA7D6")
                            id: add_button
                            icon: 'plus'
                            text: 'Add Harmonic'
                            icon_color: 'white'
                            text_color: 'white'
                            line_color: (0, 0, 0, 0)

                        BoxLayout:
                            size_hint: 0.5, 0.2

                        MDRectangleFlatIconButton:
                            md_bg_color: kivy.utils.get_color_from_hex("#3FA7D6")
                            id: all_power_spectrum_button
                            icon: 'chart-bar'
                            text: 'Display All'
                            icon_color: 'white'
                            text_color: 'white'
                            line_color: (0, 0, 0, 0)

                        BoxLayout:
                            size_hint: 0.5, 0.2

                    BoxLayout:
                        size_hint: 1, 0.5
                        orientation: 'vertical'

                BoxLayout:
                    size_hint: 0.2, 1

        BoxLayout:
            size_hint: 1, 0.05






