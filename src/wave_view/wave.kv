<RightContentCls>
    disabled: True
    pos_hint: {"center_y": .5}

    MDIconButton:
        icon: root.icon
        md_bg_color_disabled: 0, 0, 0, 0

    MDLabel:
        text: root.text
        pos_hint: {"center_y": .5}

<StandardIconButton@MDIconButton>:
    md_bg_color: style.blue_violet
    theme_text_color: 'Custom'
    text_color: style.white
    pos_hint: {"center_x": .5, "center_y": .5}

<StandardRectangleFlatIconButton@MDRectangleFlatIconButton>:
    md_bg_color: style.blue_violet
    icon_color: 'white'
    text_color: 'white'
    line_color: (0, 0, 0, 0)
    pos_hint: {"center_x": .5, "center_y": .6}

<Item>
    IconLeftWidget:
        icon: root.left_icon

    RightContentCls:
        id: container
        icon: root.right_icon
        text: root.right_text


<RootWave>:
    #:import style src.wave_view.style

    ps_controller: power_spectrum_controller
    resample: resample_button
    clear: clear_button
    single_period: single_period
    play: play_button
    back: back_button
    eraser_mode: eraser_mode
    preset: preset_mode
    kernel: kernel_mode
    show_loaded: show_loaded




    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        pos: self.pos
        padding: 20

        BoxLayout:
            size_hint: 1, 0.1

            MDLabel:
                text: 'Waveform'
                halign: 'center'
                theme_text_color: 'Primary'
                font_style: 'H6'

        BoxLayout:
            orientation: 'horizontal'

            BoxLayout:
                id: modulation
                size_hint: 1, 1

            BoxLayout:
                size_hint: 0.2, 1
                orientation: 'vertical'

                BoxLayout:
                    size_hint: 1, 0.5
                    orientation: 'vertical'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, 1

                    BoxLayout:
                        size_hint: 1, 0.2

                    StandardIconButton:
                        id: eraser_mode
                        icon: 'eraser'


                    BoxLayout:
                        size_hint: 0.5, 0.2

                    BoxLayout:
                        size_hint: 1, 0.5
                        orientation: 'horizontal'

                        BoxLayout:
                            size_hint: 0.2, 1

                        StandardIconButton:
                            id: play_button
                            icon: 'play'

                        BoxLayout:
                            size_hint: 0.2, 1

                        StandardIconButton:
                            id: back_button
                            icon: 'skip-backward'

                        BoxLayout:
                            size_hint: 0.2, 1

                    BoxLayout:
                        size_hint: 1, 0.15

                    StandardIconButton:
                        id: clear_button
                        icon: 'vector-polyline-remove'


                BoxLayout:
                    size_hint: 1, 0.6

                StandardIconButton:
                    id: single_period
                    icon: 'arrow-expand-horizontal'

                BoxLayout:
                    size_hint: 0.5, 0.2

                StandardRectangleFlatIconButton:
                    id: resample_button
                    icon: 'selection-ellipse-remove'
                    text: 'Resample'

                BoxLayout:
                    size_hint: 1, 1
                    orientation: 'vertical'



                StandardRectangleFlatIconButton:
                    icon: 'menu-down'
                    id: preset_mode
                    text: "Choose Wave"
                    on_release: root.open_choose_wave_menu()

                BoxLayout:
                    size_hint: 1, 1
                    orientation: 'vertical'

                StandardRectangleFlatIconButton:
                    icon: 'menu-down'
                    id: kernel_mode
                    text: "Choose Kernel"
                    on_release: root.open_choose_kernel_menu()

                BoxLayout:
                    size_hint: 1, 1
                    orientation: 'vertical'

                StandardRectangleFlatIconButton:
                    text: "Load Sound"
                    icon: "folder"
                    md_bg_color: style.blue_violet
                    on_release: root.file_manager_open()

                BoxLayout:
                    size_hint: 1, 1
                    orientation: 'vertical'

                StandardRectangleFlatIconButton:
                    md_bg_color: style.dark_sky_blue
                    id: show_loaded
                    icon: 'file-hidden'
                    text: 'Hide Loaded Sound'
                    disabled: True

        PowerSpectrumController:
            size_hint: 1, 0.8
            orientation: 'horizontal'
            padding: 20
            id: power_spectrum_controller

        BoxLayout:
            size_hint: 1, 0.05







